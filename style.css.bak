@import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@700&display=swap');

* {
    padding: 0px;
    margin: 0px;
    list-style: none;
    text-decoration: none;
    font-family: 'Montserrat', sans-serif;
    
}
.navbar{
    width: 100%;
    display: flex;
    justify-content: space-around;
    align-items: center;
    background-color: #1c2535;
    padding: 10px 0px;
    
}
.three-line{
    color: #ffffff;
    display: none;
}
#check{
    display: none;
}
.list{
    display: flex;
    align-items: center;
    gap: 30px;
    margin-right: 80px;
}
.list li{
    color: #ffffff;
    
}
.line{
    border-left: 1px solid #fff;
     height: 40px;
    
}
.button-small{
    width: 120px;
    height: 30px;
    border: 0;
    border-radius: 5px;
    background-color:#8D3DAF;
}
.button-small:hover{
    transform: scale(1.1);
    background-color: transparent;
    cursor: pointer;
    transition: 0.6s;
    background-color: #8D3DAF;

}
.hero-main {
    width: 100%;
    height: 100vh;
    background: url(./assets/bg.png);
    background-size: cover;
    background-position: center;
}
.hero {
    height: 80%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;

}
.hero-heading{
    margin-top: 80px;
    color: #ffffff;
    font-size: 60px;
    
}
.hero-description{
    margin-top: 30px;
    color: #ffffff;
    font-size: 25px;
}
.button-large{
    margin-top: 30px;
    width: 180px;
    height: 30px;
    border: 0;
    border-radius: 5px;
    background-color:#8D3DAF;
    color:#ffffff;
    
    
}
.button-large:hover{

    transform: scale(1.1);
    background: transparent;
    transition: 0.6s;
    cursor: pointer;
    background-color: #8D3DAF;
}

@media screen and (max-width:820px) {
    .list li{
        font-size: 15px;
    }
    .list{
        margin-left: 30px;
    }
    .logo{
        width: 80px;
    }
    .hero-heading{
        
        font-size: 50px;
        
    }
    .hero-description{
        
        font-size: 20px;
    }

}


@media screen and (max-width:770px) {
    .list{
        position: fixed;
        width: 100%;
        height: 50%;
        background-color: #1c2535;
        margin-top: 25px;
        left: -110%;
        flex-direction: column;
        align-items: center;
        gap: 3px;
        padding-top: 5px;
    }
        .list-item{
            padding: 10px;
        }
        .list-item:hover{
            transform: scale(1.1);
            background: transparent;
            transition: 0.6s;
            cursor: pointer;
            background-color: #8D3DAF;
            border-radius: 5px;
        }
       
    #check:checked~.grow-list .list {
        left: -9%;
    }
    .three-line{
        display: inline;
        order: 1;
    }
    .line{
        display: none;
    }
    
    .hero-heading{
        
        font-size: 40px;
        
    }
    .hero-description{
        
        font-size: 15px;
    }
    

}


@media screen and (max-width:460px) {
    
    .hero-heading{
        
        font-size: 30px;
        
    }
    .hero-description{
        
        font-size: 12px;
    }

}


@media screen and (max-width:360px) {
    .button-small{
        display: none;
    }
    .hero-heading{
        
        font-size: 20px;
        
    }
    .hero-description{
        
        font-size: 8px;
    }

    .button-large{
        margin-top: 30px;
        width: 120px;
        height: 30px;
        border: 0;
        border-radius: 5px;
        background-color:#8D3DAF;
        color:#ffffff;
        font-size: 10px;
        
        
    }
    .button-large:hover{
    
        transform: scale(1.1);
        background: transparent;
        transition: 0.6s;
        cursor: pointer;
        background-color: #8D3DAF;
    }

}
